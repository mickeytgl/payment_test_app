<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @episode.title %>
</p>

<% if user_signed_in? && current_user.subscribed? %>
<p>
  <strong>Description:</strong>
  <%= @episode.description %>
</p>

<% else %>
<%= link_to 'Subscribe to watch', new_subscription_path, class: "btn btn-primary" %>

<% end  %>